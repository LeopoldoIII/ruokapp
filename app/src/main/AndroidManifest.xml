<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ruokapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_ruokapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_ruokapp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.HomeActivity" />
        <activity
            android:name=".views.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".views.FoodActivity"
            android:label="@string/title_food"
            android:parentActivityName=".views.FavActivity" />
        <activity
            android:name=".views.FavActivity"
            android:label="@string/title_favorites"
            android:parentActivityName=".views.DiscoverActivity" />
        <activity
            android:name=".views.SignUpActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".views.WelcomeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.DiscoverActivity"
            android:label="@string/title_discover"
            android:parentActivityName=".views.HomeActivity"/>
        <activity
            android:name=".views.LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
    </application>

</manifest>